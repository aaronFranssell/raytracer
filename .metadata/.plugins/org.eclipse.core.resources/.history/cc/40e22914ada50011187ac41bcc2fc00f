package csg;

import math.Point;

import org.junit.Test;

import etc.Color;
import etc.Effects;

import primitives.Surface;

public class Test_CSGTree
{
	@Test(expected=NullPointerException.class)
	public void TestConstructor_NullSurface_ExpectNullPointerException()
	{
		Surface s = null;
		
		new CSGTree(new CSGNode(s));
	}
	
	public void TestConstructor_OperationNullChildren_ExpectException()
	{
		CSGNode node = new CSGNode(new Operation(Operation.BOUNDED_BY));
		Surface s = new Sphere(new Point(), 1.0, null, null, null, null, null, 1.0);
		
		Point incomingCenter, double incomingRadius,
		Color incomingCR, Color incomingCA, Color incomingCL,
		Effects incomingEffects, String filePath,
		double incomingTextureScale
	}
}
